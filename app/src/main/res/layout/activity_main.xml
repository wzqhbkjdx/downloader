<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.administrator.autodownload.MainActivity">

    <LinearLayout
        android:background="#e0e0e0"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#795548"
            android:gravity="center"
            android:textSize="20sp"
            android:text="文件大小"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="50dp" />

        <TextView
            android:background="#212121"
            android:textColor="#ffab00"
            android:text="0 MB"
            android:textSize="20sp"
            android:layout_weight="7"
            android:gravity="center"
            android:id="@+id/file_size"
            android:layout_width="0dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_thread_1"
            android:textColor="#b71c1c"
            android:gravity="center"
            android:textSize="15sp"
            android:text="线程1"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="60dp" />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="7.5dp"
            android:max="100"
            android:progress="0"
            android:layout_marginRight="8dp"
            android:progressDrawable="@drawable/progressbar"
            android:visibility="visible"/>

        <TextView
            android:textColor="#263238"
            android:text="0%"
            android:textSize="15sp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/tv_process1"
            android:layout_width="0dp"
            android:layout_height="60dp" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_thread_2"
            android:textColor="#b71c1c"
            android:gravity="center"
            android:textSize="15sp"
            android:text="线程2"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="60dp" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="7.5dp"
            android:max="100"
            android:progress="0"
            android:layout_marginRight="8dp"
            android:progressDrawable="@drawable/progressbar"
            android:visibility="visible"/>

        <TextView
            android:textColor="#263238"
            android:text="0%"
            android:textSize="15sp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/tv_process2"
            android:layout_width="0dp"
            android:layout_height="60dp" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_thread_3"
            android:textColor="#b71c1c"
            android:gravity="center"
            android:textSize="15sp"
            android:text="线程3"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="60dp" />

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="7.5dp"
            android:max="100"
            android:progress="0"
            android:layout_marginRight="8dp"
            android:progressDrawable="@drawable/progressbar"
            android:visibility="visible"/>

        <TextView
            android:textColor="#263238"
            android:text="0%"
            android:textSize="15sp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/tv_process3"
            android:layout_width="0dp"
            android:layout_height="60dp" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_thread_4"
            android:textColor="#b71c1c"
            android:gravity="center"
            android:textSize="15sp"
            android:text="线程4"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="60dp" />

        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="7.5dp"
            android:max="100"
            android:progress="0"
            android:layout_marginRight="8dp"
            android:progressDrawable="@drawable/progressbar"
            android:visibility="visible"/>

        <TextView
            android:textColor="#263238"
            android:text="0%"
            android:textSize="15sp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/tv_process4"
            android:layout_width="0dp"
            android:layout_height="60dp" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_thread_5"
            android:textColor="#b71c1c"
            android:gravity="center"
            android:textSize="15sp"
            android:text="线程5"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="60dp" />

        <ProgressBar
            android:id="@+id/progressBar5"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="7.5dp"
            android:max="100"
            android:progress="0"
            android:layout_marginRight="8dp"
            android:progressDrawable="@drawable/progressbar"
            android:visibility="visible"/>

        <TextView
            android:textColor="#263238"
            android:text="0%"
            android:textSize="15sp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/tv_process5"
            android:layout_width="0dp"
            android:layout_height="60dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="#00bfa5"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:id="@+id/btn_download"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="一次下载一个" />

        <Button
            android:layout_marginLeft="3dp"
            android:background="#e53935"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:id="@+id/btn_all_download"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="一次下载五个！" />


    </LinearLayout>

    <Button
        android:layout_marginTop="5dp"
        android:background="#ff3d00"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:id="@+id/btn_all_shutdown"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="停止所有线程" />



</LinearLayout>
